<h2>New Comment</h2>

  <%= form_with :model => @comment do |form| %>
    <div class="mb-3">
      <%= form.label "body", :class => "form-label" %>
      <%= form.text_field "body", :class => "form-control" %>
    </div>

    <%= form.submit "Create Comment", :class => "btn btn-primary" %>
  <% end %>

